<body>
  <!-- Header -->
  <header id="header" class="alt">
    <div class="logo"><a href="/">Cipher<span>Ghostss</span></a></div>
    <a href="#menu">Menu</a>
    <nav id="menu">
      <ul class="links">
        <li><a href="/">Home</a></li>
        <li><a href="/stories">Stories</a></li>
        <li><a href="/signup">Login</a></li>
      </ul>
    </nav>
  </header>

 <!-- Hero Banner with Slider -->
<section class="banner hero-slider">
  <div class="slider-container">
    <div class="slide fade-in">
      <img src="/assets/images/hacker-slide1.jpeg" alt="Hacker in the Shadows">
      <div class="slide-caption">
        <h2>üìö Dive into the Dark Web Diaries</h2>
        <p class="typing">Real cybercrime. Real exploits. Real consequences.</p>
      </div>
    </div>
    <div class="slide fade-in">
      <img src="/assets/images/hacker-slide3.jpeg" alt="Firewall breach animation">
      <div class="slide-caption">
        <h2>üîì When Firewalls Fail</h2>
        <p class="typing">Explore moments when digital vaults were cracked open.</p>
      </div>
    </div>
    <div class="slide fade-in">
      <img src="/assets/images/hacker-slide2.jpeg" alt="White hat coding at night">
      <div class="slide-caption">
        <h2>üë®‚Äçüíª The Rise of the White Hat</h2>
        <p class="typing">Meet the ethical hackers defending the web.</p>
      </div>
    </div>
  </div>
</section>


  <!-- Stories Section -->
  <section id="stories" class="wrapper style2">
    <div class="inner">
      <% if (stories.length > 0) { %>
        <div class="story-grid">
          <% stories.forEach(story => { %>
            <div class="story-card">
              <img src="<%= story.image %>" alt="<%= story.title %>" class="story-thumbnail">
              <h3><%= story.title %></h3>
              <p><%= story.excerpt %></p>
              <a href="/posts/<%= story.slug %>" class="button">Read Full Story</a>

            </div>
          <% }) %>
        </div><br>
      <% } else { %>
        <p>No stories found. Come back later!</p>
      <% } %>
    </div>
  </section>

  <!-- Footer -->
  <footer id="footer" class="cyberpunk-footer">
    <div class="container">
      <ul class="icons">
        <li><a href="https://twitter.com/CipherGhostss" class="icon fa-twitter" target="_blank"><span>Twitter</span></a></li>
        <li><a href="https://www.facebook.com/CipherGhostss" class="icon fa-facebook" target="_blank"><span>Facebook</span></a></li>
        <li><a href="https://www.instagram.com/CipherGhostss" class="icon fa-instagram" target="_blank"><span>Instagram</span></a></li>
        <li><a href="mailto:contact@cipherghostss.net" class="icon fa-envelope-o"><span>Email</span></a></li>
        <li><a href="https://www.youtube.com/@CipherGhostss" class="icon fa-youtube" target="_blank"><span>YouTube</span></a></li>
      </ul>
    </div>
    <div class="dynamic-copyright">
      <p>&copy; <span id="current-year"></span> CipherGhostss. All Rights Reserved.</p>
    </div>
  </footer>

  <script>
    document.getElementById("current-year").textContent = new Date().getFullYear();
  </script>
  <script src="/assets/js/jquery.min.js"></script>
  <script src="/assets/js/jquery.scrollex.min.js"></script>
  <script src="/assets/js/skel.min.js"></script>
  <script src="/assets/js/util.js"></script>
  <script src="/assets/js/main.js"></script>
  <script>
    let slideIndex = 0;
    const slides = document.querySelectorAll(".slide");
  
    function showSlides() {
      slides.forEach(slide => slide.style.display = "none");
      slideIndex++;
      if (slideIndex > slides.length) slideIndex = 1;
      slides[slideIndex - 1].style.display = "block";
      setTimeout(showSlides, 5000); // Change every 5 seconds
    }
  
    document.addEventListener("DOMContentLoaded", showSlides);
  </script>
  
</body>
</html>
